{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": ["es2015"],
    "paths": {
        "@user/*": ["src/user/*"],
        "@shared/*": ["src/shared/*"],
        "@database/*": ["src/database/*"]
    }
  },
  "exclude": ["node_modules"]
}
